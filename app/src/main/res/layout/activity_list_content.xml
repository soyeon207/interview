<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="s2017s06.kr.hs.mirim.interview.ListContent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="20dp"
            android:text="커뮤니티"
            android:textAlignment="center"
            android:textColor="@color/main"
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/back_icon"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:id="@+id/back_content"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:background="#f1f1f1"
            android:id="@+id/content_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="동아리 모집"
            android:gravity="left"
            android:paddingLeft="20dp"

            android:textColor="#333333"
            android:textSize="23dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#f1f1f1"
            android:gravity="right"
            >

            <TextView
                android:paddingLeft="20dp"
                android:layout_marginTop="5dp"
                android:background="#f1f1f1"
                android:id="@+id/content_nick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="동아리 모집"
                android:textColor="#333333"
                android:textSize="10dp"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>

        <TextView
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/content_con"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#333333"
            android:layout_marginBottom="15dp"
            android:text="dsdfsdfsdfsdf"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="      댓글 달기"
        android:background="#FDCB31"
        android:textColor="#ffffff"
        android:padding="5dp"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reply_listview"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/reply_edit"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="#FDCB31"
                android:textColor="#ffffff"
                android:id="@+id/reply_btn"
                android:text="게시"
                />

        </LinearLayout>

</LinearLayout>
