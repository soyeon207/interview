<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/relative_interview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/under_line">

                    <TextView
                        android:id="@+id/interview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:padding="15dp"
                        android:text="면접"
                        android:textAlignment="center"
                        android:textColor="#AF3421"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/relative_interview"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/Mock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/main">

                        <Button
                            android:id="@+id/mock_btn"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="35dp"
                            android:background="@drawable/circle_nocolor"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:id="@+id/mock_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="모의 면접"
                            android:textColor="#ffffff"
                            android:textSize="40dp"
                            android:layout_below="@+id/mock_btn"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="모의 면접"
                            android:textColor="#ffffff"
                            android:textSize="15dp"
                            android:layout_below="@+id/mock_text"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/Free"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#ffffff">

                        <Button
                            android:id="@+id/free_btn"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="35dp"
                            android:background="@drawable/circle_color"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:id="@+id/free_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="자유 면접"
                            android:textColor="@color/main"
                            android:textSize="40dp"
                            android:layout_below="@+id/free_btn"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="자유 면접"
                            android:textColor="@color/main"
                            android:textSize="15dp"
                            android:layout_below="@+id/free_text"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/under_line"
                    android:padding="15dp"
                    android:text="Tip"
                    android:textAlignment="center"
                    android:textColor="@color/main"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:gravity="center"
                    android:text="누르면 외부 사이트로 연결됩니다. "
                    android:textColor="#333333"
                    android:textSize="15dp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/tip_btn1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:orientation="horizontal">

                            <Button
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:background="@drawable/circle_color"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="30dp"
                                android:text="다 된 취업에 면접 뿌리지 않는 팁 7"
                                android:textColor="#333333"
                                android:textSize="18dp"
                                android:gravity="center"
                                android:background="@drawable/box"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tip_btn2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:orientation="horizontal">

                            <Button
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:background="@drawable/circle_color"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="30dp"
                                android:text="채용담당자가 전하는 취업준비 TIP 17"
                                android:textColor="#333333"
                                android:textSize="18dp"
                                android:gravity="center"
                                android:background="@drawable/box"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tip_btn3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:orientation="horizontal">

                            <Button
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:background="@drawable/circle_color"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="30dp"
                                android:text="성공적인 취업을 위한 면접준비 팁"
                                android:textColor="#333333"
                                android:textSize="18dp"
                                android:gravity="center"
                                android:background="@drawable/box"/>

                        </LinearLayout>

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#0078d7"
                        android:padding="15dp"
                        android:text="커뮤니티"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/write"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/write_icon" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ListView
                        android:id="@+id/start_listview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></ListView>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/under_line"
                    android:padding="15dp"
                    android:text="My"
                    android:textAlignment="center"
                    android:textColor="@color/main"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_account_circle_black_24dp" />

                    <TextView
                        android:id="@+id/nickname_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="소연"
                        android:textColor="@color/main"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="님 안녕하세요"
                        android:textColor="@color/main"
                        android:textSize="20dp" />

                </LinearLayout>


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/main" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/playbutton"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/playbutton" />

                    <TextView
                        android:id="@+id/watch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/playbutton"
                        android:background="#ffffff"
                        android:text="영상보기"
                        android:textColor="@color/main"
                        android:textSize="20dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/exit_button" />

                    <TextView
                        android:id="@+id/exit_interview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="탈퇴"
                        android:textColor="@color/main"
                        android:textSize="20dp" />

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</TabHost>