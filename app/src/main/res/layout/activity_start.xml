<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity"
    android:id="@android:id/tabhost">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff">

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="면접"
                    android:textSize="20dp"
                    android:id="@+id/interview"
                    android:padding="15dp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:background="#0078d7"
                    />


            </RelativeLayout>


                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <Button
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:id="@+id/Mock"
                        android:layout_width="160dp"
                        android:layout_height="145dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/tb1"
                        android:textColor="#0078d7"
                        android:textSize="50dp" />

                    <Button
                        android:layout_marginTop="15dp"
                        android:id="@+id/Free"
                        android:layout_width="160dp"
                        android:layout_height="145dp"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/tb2"
                        android:textColor="#0078d7"

                        android:textSize="50dp" />



                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mirimuniform"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="45dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#0078d7"
                    android:padding="15dp"
                    android:text="Tip"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="누르면 외부 사이트로 연결됩니다. "
                    android:textColor="#333333"
                    android:textSize="15dp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/tip_btn1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:background="@drawable/btn_back"
                            android:text="다 된 취업에 면접 뿌리지 않는 팁 7"
                            android:textColor="#333333"
                            android:textSize="18dp" />

                        <Button
                            android:id="@+id/tip_btn2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_back"
                            android:text="채용담당자가 전하는 취업준비 Tip 17"
                            android:textColor="#333333"
                            android:textSize="18dp" />

                        <Button
                            android:id="@+id/tip_btn3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_back"
                            android:text="성공적인 취업을 위한 면접준비 팁"
                            android:textColor="#333333"
                            android:textSize="18dp" />

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="커뮤니티"
                        android:textSize="20dp"
                        android:padding="15dp"
                        android:textColor="#ffffff"
                        android:textAlignment="center"
                        android:background="#0078d7"
                        />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="8dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/write_icon"
                        android:id="@+id/write"
                        />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ListView
                        android:id="@+id/start_listview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></ListView>

                </LinearLayout>


            </LinearLayout>



            <LinearLayout
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My"
                    android:textSize="20dp"
                    android:padding="15dp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:background="#0078d7"
                     />


                <LinearLayout
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_account_circle_black_24dp"
                        />

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/nickname_show"
                        android:textColor="#000000"
                        android:text="소연"
                        android:textSize="20dp"
                        />

                    <TextView
                        android:id="@+id/nickname"
                        android:textColor="#000000"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="님 안녕하세요"

                        android:textSize="20dp"/>



                </LinearLayout>



                <View

                    android:layout_width="wrap_content"
                    android:layout_height="0.3dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#000000" />


                <LinearLayout
                    android:layout_gravity="left"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/playbutton"
                        android:background="@drawable/playbutton"
                        />

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:id="@+id/watch"
                        android:layout_toRightOf="@id/playbutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:text="영상보기"
                        android:textSize="20dp"
                        android:textColor="#000000"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/exit_button"
                        />
                    <TextView
                        android:id="@+id/exit_interview"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"
                        android:text="탈퇴"
                        android:textSize="20dp"
                        android:textColor="#000000"/>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

</TabHost>