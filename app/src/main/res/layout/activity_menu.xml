<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu"
    android:id="@android:id/tabhost">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff">

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <Button
                    android:layout_width="200dp"
                    android:layout_height="185dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle_button"
                    android:text="모의"
                    android:textColor="#0078d7"
                    android:textSize="50dp" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="185dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle_button"
                    android:text="자유"
                    android:textColor="#0078d7"
                    android:textSize="50dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="누르면 외부 사이트로 연결됩니다."
                    android:textSize="30dp"
                    android:textColor="#0078d7"
                    android:gravity="center"/>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <Button
                            android:id="@+id/tip_btn1"
                            android:layout_width="350dp"
                            android:layout_height="30dp"
                            android:background="@drawable/button"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="5dp"
                            android:text="다 된 취업에 면접 뿌리지 않는 팁 7"
                            android:textColor="#ffffff"
                            android:textSize="20dp"/>

                        <Button
                            android:id="@+id/tip_btn2"
                            android:layout_width="350dp"
                            android:layout_height="30dp"
                            android:background="@drawable/button"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="5dp"
                            android:text="채용담당자가 전하는 취업준비 Tip 17"
                            android:textColor="#ffffff"
                            android:textSize="20dp"/>

                        <Button
                            android:id="@+id/tip_btn3"
                            android:layout_width="350dp"
                            android:layout_height="30dp"
                            android:background="@drawable/button"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="5dp"
                            android:text="성공적인 취업을 위한 면접준비 팁"
                            android:textColor="#ffffff"
                            android:textSize="20dp"/>

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#0000ff">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nickname"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="NickName : "
                    android:textSize="20dp"/>

                <Button
                    android:id="@+id/watch"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/button"
                    android:text="영상보기"
                    android:textSize="20dp"
                    android:textColor="#ffffff"/>

                <Button
                    android:id="@+id/withdraw"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/button"
                    android:text="탈퇴"
                    android:textSize="20dp"
                    android:textColor="#ffffff"/>

            </LinearLayout>

        </FrameLayout>

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

</TabHost>